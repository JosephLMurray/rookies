{
  "root": true,
  "env": {
    "node": true,
    "es2021": true,
    "jest/globals": true
  },
  "plugins": ["no-loops", "prettier", "jest"],
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:@shopify/esnext",
    "plugin:@shopify/node",
    "plugin:@shopify/prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "jest/no-disabled-tests": "warn",
    "jest/no-focused-tests": "error",
    "jest/no-identical-title": "error",
    "jest/prefer-to-have-length": "warn",
    "jest/valid-expect": "error",
    "no-console": 1,
    "no-loops/no-loops": 1,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ]
  }
}
